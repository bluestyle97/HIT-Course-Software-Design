<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<VBox alignment="TOP_CENTER" fillWidth="false" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: skyblue;" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="segmenttreedemo.demo.BaseWindowController">
   <children>
      <StackPane prefHeight="200.0" prefWidth="600.0">
         <children>
            <ImageView fitHeight="200.0" fitWidth="600.0" pickOnBounds="true">
               <image>
                  <Image url="@../../image/hit.png" />
               </image>
            </ImageView>
         </children></StackPane>
      <TextFlow maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="600.0" style="-fx-background-color: lightpink;" textAlignment="CENTER">
         <children>
            <Text fontSmoothingType="LCD" strokeType="OUTSIDE" strokeWidth="0.0" text="软件设计实践大作业——线段树演示系统">
               <font>
                  <Font name="Microsoft YaHei Bold" size="24.0" />
               </font>
            </Text>
         </children>
         <padding>
            <Insets top="3.0" />
         </padding>
      </TextFlow>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="160.0" prefWidth="600.0">
         <children>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#handleRectangleButtonClicked" prefHeight="30.0" prefWidth="400.0" text="演示1——求解矩形面积与周长">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </Button>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#handleIntervalButtonClicked" prefHeight="30.0" prefWidth="400.0" text="演示2——求解区间最值与总和">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </Button>
            <Button fx:id="closeButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onMouseClicked="#handleCloseButtonClicked" prefHeight="30.0" prefWidth="100.0" text="关闭">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
